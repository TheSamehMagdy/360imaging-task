<%- include ('../partials/header.ejs') %>

        <div class="row text-center">
            <div class="col-lg-12 mx-auto">
                <h1 class="mb-4">Edit <%=post.title%></h1>
                <div class="w-50 mx-auto">
                    <form action="/posts/<%=post._id%>?_method=PUT" method="POST" enctype="x-www-form-urlencoded">
                        <div class="mb-3">
                            <input class="form-control" type="text" name="post[title]" value="<%=post.title%>" required>    
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="text" name="post[image]" value="<%=post.image%>" required>    
                        </div>
                        <div class="mb-3">
                            <textarea rows="10" cols="40" class="form-control" name="post[body]"><%=post.body%></textarea>    
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success btn-lg btn-block">Save Changes</button>
                        </div>
                    </form>
                    <a href="/posts/<%=post._id%>">Go Back</a> 
                </div>
            </div>
        </div>
    
<%- include ('../partials/footer.ejs') %>