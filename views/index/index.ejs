<%- include ('../partials/header.ejs') %>

        <header class="p-5 mt-4 mb-4 text-white bg-dark rounded-3">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Welcome to Our Blog</h1>
                <p class="col-md-8 fs-4">Check out our posts.</p>
                <a href="/posts/new" class="btn btn-success">Create post</a>
            </div>
        </header>

        <div class="row text-center">
            <% posts.forEach(function(post){ %>
                <div class="post col-sm-8 mb-3">
                    <div class="card">
                        <img class="card-img-top" src="<%=post.image%>" alt="Card image cap">
                        <div class="card-body d-flex flex-column">
                            <h2 class="card-title post-title"><%=post.title%></h2>
                            <p class="card-text text-start"><%=post.body.substring(0, 250)%>...</p>
                            <a href="/posts/<%=post._id%>" class="btn btn-info align-self-end text-white">Read More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>

<%- include ('../partials/footer.ejs') %>